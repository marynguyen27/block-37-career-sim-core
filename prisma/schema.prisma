datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  reviews  Review[]
}

model Item {
  id       Int     @id @default(autoincrement())
  name     String
  type     String
  reviews  Review[]
}

model Review {
  id       Int     @id @default(autoincrement())
  text     String
  rating   Int
  itemId   Int
  userId   Int
  item     Item    @relation(fields: [itemId], references: [id])
  user     User    @relation(fields: [userId], references: [id])

  @@unique([itemId, userId]) // Ensure only one review per item per user
}
