datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  password String
  reviews  Review[]
  comments Comment[]
}

model Item {
  id      Int      @id @default(autoincrement())
  name    String
  reviews Review[]
}

model Review {
  id       Int       @id @default(autoincrement())
  text     String
  rating   Int
  itemId   Int
  userId   Int
  item     Item      @relation(fields: [itemId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  comments Comment[]

  @@unique([itemId, userId]) // Ensure only one review per item per user
}

model Comment {
  id       Int    @id @default(autoincrement())
  text     String
  reviewId Int
  review   Review @relation(fields: [reviewId], references: [id])
  userId   Int
  user     User   @relation(fields: [userId], references: [id])
}
